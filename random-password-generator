import random
import string

def generate_password(length):
  all_character = string.ascii_letters + string.digits +string.punctuation
  
  random_string = ''.join(random.choices(all_character, k=length))
  return random_string

  # Generate a random string of 8 characters
random_result = generate_password(8)
print("Your Random Password is :", random_result)
